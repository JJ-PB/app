<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Contenedor para limitar el ancho en pantallas grandes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:ignore="MissingConstraints">

        <!-- primer alimento !-->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:id="@+id/imgheader2"
            android:src="@drawable/combo"/>


        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🥤 ComboFresh $15.990 🍿"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brown"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cabritas"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍿 Cabritas $10.990 🍿"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brown"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bebida"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🥤 ComboMAX $20.990 🌭"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brown"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🥤Bebida CocaCola ZERO $1.990 🥤"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brown"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/aa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🥤COMBO SUPERMAX $25.990🥤"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brown"/>



        <Button
            android:id="@+id/btnatras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>


    </LinearLayout>>

</androidx.constraintlayout.widget.ConstraintLayout>


